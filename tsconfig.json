{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true
  },
  "exclude": [
    "tests",
    "node_modules",
    "build",
    "build.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
}
